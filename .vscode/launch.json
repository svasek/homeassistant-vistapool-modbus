{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Home Assistant (debugpy, docker)",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "justMyCode": false
    },
    {
      "name": "Debug tests (pytest)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "--cov=custom_components/vistapool",
        "--cov-report=term-missing",
        "--disable-warnings"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
